{
  "manifest_version": 3,
  "name": "Payment Timer Extension",
  "version": "1.0",
  "description": "Implements a cooling period before payments",
  "permissions": [
    "storage",
    "alarms",
    "scripting",
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:5000/*",
    "file://*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>", "file://*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}